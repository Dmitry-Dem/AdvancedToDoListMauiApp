<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdvancedToDoListMauiApp.Views.RulesPage"
             xmlns:local="clr-namespace:AdvancedToDoListMauiApp.Views">

    <Grid x:Name="wrapper">
        <!--Main Content-->
        <Grid RowDefinitions=".1*, .15*, .65*, .1*" Margin="20">
            <!--Back Button and Punishment Points-->
            <Grid RowDefinitions="*, *">
                <ImageButton 
                x:Name="ButtonBack"
                Source="left_arrow_qwertyuiop.png"
                HorizontalOptions="Start"
                WidthRequest="30"
                HeightRequest="30"
                Clicked="ButtonBack_Clicked"/>

                <Border
                BackgroundColor="White"
                StrokeShape="RoundRectangle 80,80,80,80"
                HeightRequest="30"
                WidthRequest="100"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Grid.Column="1">

                    <Grid ColumnDefinitions="*, *, *, *">
                        <Image
                        Source="coin_black"
                        Margin="2, 0, 0, 0"/>

                        <Label
                        x:Name="LabelPunishmentPoints"
                        Text="1"
                        TextColor="Black"
                        FontSize="20"
                        Margin="0, 0, 5, 0"
                        HorizontalTextAlignment="End"
                        VerticalTextAlignment="Center"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"/>
                    </Grid>
                </Border>
            </Grid>

            <!--Rules List Title-->
            <VerticalStackLayout Grid.Row="1">
                <Label
                Text="Rules:"
                TextColor="White"
                FontSize="24"
                FontAttributes="Bold"
                Margin="0, 0, 0, 15"
                Grid.Row="0"
                Grid.ColumnSpan="3"/>

                <Rectangle Fill="Gray"/>
            </VerticalStackLayout>

            <Grid Grid.Row="1" VerticalOptions="End" ColumnDefinitions=".39*, .145*, .145*, .145*, .145*" Margin="10">
                <Label
                Text="Rule"
                FontSize="Small"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                Grid.Column="0"/>

                <Image
                HeightRequest="20"
                WidthRequest="20"
                Source="coin_white.png"
                Grid.Column="1"/>

                <Label
                Text="Update"
                FontSize="Small"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                Grid.Column="2"/>

                <Label
                Text="Delete"
                FontSize="Small"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                Grid.Column="3"/>

                <Label
                Text="Violated"
                FontSize="Small"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="End"
                Grid.Column="4"/>
            </Grid>

            <!--Rule List-->
            <CollectionView
                x:Name="RulesCollectionView"
                Grid.Row="2"
                Grid.RowSpan="2"
                ItemsSource="{Binding UserRules}"
                VerticalOptions="Start">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                        StrokeShape="RoundRectangle 10,10,10,10">

                            <Grid ColumnDefinitions=".4*, .15*, .15*, .15*, .15*" Margin="5">

                                <Label
                                Text="{Binding Name}"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Grid.Column="0"/>

                                <Label
                                Text="{Binding PunishmentPoint}"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                Grid.Column="1"/>

                                <ImageButton
                                Source="update_qwertyuiop.png"
                                WidthRequest="25"
                                HeightRequest="25"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:RulesPage}}, Path=BindingContext.UpdateRuleCommand}"
                                CommandParameter="{Binding .}"
                                Grid.Column="2"/>

                                <ImageButton
                                Source="minus_qwertyuiop.png"
                                WidthRequest="25"
                                HeightRequest="25"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:RulesPage}}, Path=BindingContext.DeleteRuleCommand}"
                                CommandParameter="{Binding .}"
                                Grid.Column="3"/>

                                <ImageButton
                                Source="danger_qwertyuiop.png"
                                WidthRequest="25"
                                HeightRequest="25"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:RulesPage}}, Path=BindingContext.ViolatedRuleCommand}"
                                CommandParameter="{Binding .}"
                                Grid.Column="4"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--Add new record Button-->
            <ImageButton
            x:Name="ButtonAddNewRule"
            Clicked="ButtonAddNewRule_Clicked"
            Source="plus_qwertyuiop.png"
            HeightRequest="50"
            WidthRequest="50"
            HorizontalOptions="End"
            Grid.Row="3"/>
        </Grid>

        <!--Add new Rule or Update Rule Panel-->
        <Grid 
            x:Name="RulePanel"
            IsVisible="false">

            <!--Panel Backgraund Shadow-->
            <Border 
                x:Name="BorderPanelBackground"
                BackgroundColor="Black"
                Opacity="0.85"
                Stroke="transparent">

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapBorderClosePanelButton_Tapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!--Panel Content-->
            <Border 
                BackgroundColor="Black"
                Stroke="White"
                WidthRequest="200"
                HeightRequest="200"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 10, 10, 10 ,10"
                Padding="15">

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Border.GestureRecognizers>
                
                <Grid 
                    ColumnDefinitions="*, *"
                    RowDefinitions=".25*, .05*, .35*, .35*">

                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Rule Name"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"/>

                    <Image
                        Source="coin_white.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Grid.Column="1"
                        Grid.Row="0"/>

                    <Rectangle
                        HeightRequest="1"
                        BackgroundColor="Gray"
                        VerticalOptions="Start"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"/>

                    <!--Panel Entryes-->
                    <Grid
                        ColumnDefinitions="*, *"
                        Grid.ColumnSpan="2"
                        Grid.Row="2">

                        <!--Id-->
                        <Label
                            x:Name="PanelLabelRuleId"
                            IsVisible="false"/>

                        <Border
                            Margin="5, 0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 5, 5, 5, 5"
                            Grid.Column="0">

                            <Entry
                                x:Name="EntryRuleName"
                                Placeholder="Name"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"/>
                        </Border>

                        <Border
                            Margin="5, 0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 5, 5, 5, 5"
                            Grid.Column="1">

                            <Entry
                                x:Name="EntryPunishmentPoint"
                                Placeholder="Cost"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!--Panel Buttons-->
                    <Grid
                        ColumnDefinitions="*, *"
                        Grid.ColumnSpan="2"
                        Grid.Row="3">

                        <Border
                            x:Name="BorderClosePanelButton"
                            StrokeThickness="1.7"
                            Stroke="#450000"
                            BackgroundColor="#C32727"
                            Margin="5, 0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 5, 5, 5, 5"
                            Grid.Column="0">

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapBorderClosePanelButton_Tapped"/>
                            </Border.GestureRecognizers>

                            <Label
                                FontSize="Medium"
                                Text="Cancel"
                                TextColor="#450000"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"/>
                        </Border>

                        <Border
                            x:Name="BorderSavePanelDataButton"
                            StrokeThickness="1.7"
                            Stroke="#295700"
                            BackgroundColor="#3EA201"
                            Margin="5, 0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 5, 5, 5, 5"
                            Grid.Column="1">

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapBorderSavePanelDataButton_Tapped"/>
                            </Border.GestureRecognizers>
                            
                            <Label
                                FontSize="Medium"
                                Text="Save"
                                TextColor="#295700"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>